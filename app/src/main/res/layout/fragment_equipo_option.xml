<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <Button
        android:id="@+id/btnAddToFavorites"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Añadir a Favoritos"
        android:drawableLeft="@drawable/ic_favourite"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnAddComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Añadir Comentario"
        android:drawableLeft="@drawable/ic_comment"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/btnAddToFavorites"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnViewInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver mas informacion"
        android:drawableLeft="@drawable/ic_info"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/btnAddComment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>