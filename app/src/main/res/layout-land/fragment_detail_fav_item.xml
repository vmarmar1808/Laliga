<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor para el título, EditText y botón (más compacto) -->
    <LinearLayout
        android:id="@+id/topContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:padding="4dp">

        <!-- Título del fragmento -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipo:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="4dp"/>

        <!-- EditText para escribir el comentario -->
        <EditText
            android:id="@+id/etComentario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Comentario"
            android:inputType="text"
            android:textSize="14sp"
            android:padding="6dp"
            android:background="@android:drawable/edit_text"/>

        <!-- Botón para guardar comentario -->
        <ImageButton
            android:id="@+id/btnGuardarComentario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_save"
            android:contentDescription="Guardar"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- RecyclerView para mostrar los comentarios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerLaLiga3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
