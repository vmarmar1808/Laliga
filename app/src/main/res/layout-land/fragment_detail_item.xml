<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailItemFragment">

    <!-- Logo del equipo a la izquierda -->
    <ImageView
        android:id="@+id/logoEquipo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Logo del equipo"
        android:scaleType="fitCenter"
        android:src="@drawable/liga_santander"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contenedor de información -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@id/logoEquipo"
        app:layout_constraintTop_toTopOf="@id/logoEquipo"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/nombreEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Athletic B"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/grupoEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grupo 1"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/estadioEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estadio: Lezama"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/infoEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipo filial del Athletic Club con una larga tradición en el fútbol español."
            android:textSize="18sp"
            android:layout_marginTop="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



